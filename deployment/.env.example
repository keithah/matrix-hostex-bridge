# Hostex Bridge Environment Variables
# Copy this file to .env and customize for your deployment

# Container user/group IDs (match your host user)
UID=1000
GID=1000

# Bridge configuration
BRIDGEV2=1

# Optional: Custom bridge port (default: 29337)
# BRIDGE_PORT=29337

# Optional: Custom metrics port for monitoring
# METRICS_PORT=8080
# METRICS_ENABLED=true

# Optional: Database configuration for PostgreSQL
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=mautrix_hostex
# DB_USER=mautrix
# DB_PASSWORD=your-secure-password-here

# Optional: Logging configuration
# LOG_LEVEL=debug
# LOG_FORMAT=json

# Optional: Resource limits
# MEMORY_LIMIT=512M
# CPU_LIMIT=0.5

# Docker image tag (default: latest)
# IMAGE_TAG=latest

# Network name (default: hostex-bridge-network)
# NETWORK_NAME=hostex-bridge-network